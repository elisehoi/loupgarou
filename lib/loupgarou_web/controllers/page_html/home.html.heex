    <button type="button" onclick="redirectToExistingGame()">Join party!</button>

    <script>
        function getName() {
            // Retrieve the name from the contenteditable element
            return document.getElementById('nameInput').innerText.trim();
        }

        function redirectToNewGame() {
            const name = getName();
            if (name && (name !== 'Write your own name here')) {
                console.log('Starting new game with name:', name);
                // Example: Add name to the URL as a query parameter
                window.location.href = `/waiting-room-master?name=${encodeURIComponent(name)}`;
            } else {
                alert('Please enter your name!');
            }
        }

        function redirectToExistingGame() {
            const name = getName();
            if (name && (name !== 'Write your own name here')) {
                console.log('Joining existing game with name:', name);
                // Example: Add name to the URL as a query parameter
                window.location.href = `/join-game?name=${encodeURIComponent(name)}`;
            } else {
                alert('Please enter your name!');
            }
        }
    </script>

