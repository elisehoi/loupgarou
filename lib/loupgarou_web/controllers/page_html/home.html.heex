    fetch(`/join_game_room/${encodeURIComponent(gameCode)}`)
        .then(response => {
            if (response.ok) {
                console.log('Room exists, redirecting...');
                window.location.href = `/join_game_room/${encodeURIComponent(gameCode)}?name=${encodeURIComponent(name)}`;
            } else {
                // TODO this part can be removed? There's a method that creates a new room if the code doesn't exist....
                alert('The game room with the provided code does not exist!');
            }
        })
        .catch(error => {
            console.error('Error checking game room:', error);
